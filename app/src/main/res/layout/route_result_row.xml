<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/ddotColorBar"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/ETAHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceTextView">

    </FrameLayout>

    <TextView
        android:id="@+id/timeFrameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="6:09 AM-6:25 AM"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fareTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="$2.00"
        app:layout_constraintStart_toStartOf="@+id/transitDetailsTextView"
        app:layout_constraintTop_toBottomOf="@+id/transitDetailsTextView" />

    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="2.1 mi"
        app:layout_constraintEnd_toEndOf="@+id/transitDetailsTextView"
        app:layout_constraintStart_toEndOf="@+id/fareTextView"
        app:layout_constraintTop_toBottomOf="@+id/transitDetailsTextView" />

    <TextView
        android:id="@+id/transitDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:maxLines="2"
        android:text="6:12 AM Bus towards Beaubien &amp; Jefferson"
        app:layout_constraintEnd_toEndOf="@+id/durationTextView"
        app:layout_constraintStart_toStartOf="@+id/timeFrameTextView"
        app:layout_constraintTop_toBottomOf="@+id/timeFrameTextView" />

    <TextView
        android:id="@+id/durationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="16 mins"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icon_clock" />

</androidx.constraintlayout.widget.ConstraintLayout>