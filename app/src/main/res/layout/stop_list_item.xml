<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4E3E3"
        android:id="@+id/cardView2"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/base_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/static_constraint_layout"
                app:layout_constraintTop_toTopOf="@+id/base_layout"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:id="@+id/stop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/routeListColor"
                    android:text="stopName"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/arrivalTimeValue" />

            <TextView
                    android:text="1313"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TexasGreen"
                    android:id="@+id/arrivalTimeValue"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/stop_name"
                    app:layout_constraintStart_toStartOf="@+id/arrivalTimeLbl"
                    app:layout_constraintEnd_toEndOf="@+id/arrivalTimeLbl" />

            <TextView
                    android:id="@+id/arrivalTimeLbl"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="@string/stopTimeMinutes"
                    android:gravity="center"
                    android:layout_marginEnd="-10dp"
                    android:textColor="@color/TexasGreen"
                    app:layout_constraintTop_toBottomOf="@+id/arrivalTimeValue"
                    app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_clock"
                    android:id="@+id/clockIcon"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintStart_toStartOf="@+id/stop_name"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/stop_name" />

            <TextView
                    android:text="@string/stopTimeString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:id="@+id/routeNumber"
                    app:layout_constraintTop_toTopOf="@+id/clockIcon"
                    android:layout_marginTop="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/clockIcon"
                    app:layout_constraintTop_toBottomOf="@+id/stop_name"
                    app:layout_constraintStart_toEndOf="@+id/clockIcon"
                    app:layout_constraintVertical_bias="0.972" />

            <TextView
                    android:text="current Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentTime"
                    android:textStyle="normal"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/arrivalTimeLbl"
                    app:layout_constraintEnd_toEndOf="@+id/arrivalTimeLbl" />

            <TextView
                    android:text="Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stopAddress"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/stop_name"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/stop_name"
                    android:layout_marginStart="80dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/static_constraint_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/dynamic_linear_layout">

            <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_arrival_times"
                    android:text="ARRIVAL TIME" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>
